{
  "scopeName": "source.bnf",
  "fileTypes": ["bnf", "ebnf"],
  "patterns": [
    { "include": "#comment" },
    { "include": "#identifier" },
    { "include": "#operator" }
  ],
  "repository": {
    "comment": {
      "patterns": [
        {
          "name": "comment.line.double-slash.bnf",
          "match": "//.*$"
        }
      ]
    },
    "identifier": {
      "patterns": [
        {
          "name": "variable.other.identifier.bnf",
          "match": "[a-zA-Z][a-zA-Z0-9_-]*"
        }
      ]
    },
    "operator": {
      "patterns": [
        {
          "name": "keyword.operator.bnf",
          "match": "=|\\||,|\\*|\\+|;|\\(|\\)"
        }
      ]
    }
  }
}
